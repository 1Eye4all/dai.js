{
  "rootDir": "../../",
  "coverageReporters": [
    "json",
    "lcov",
    "text-summary"
  ],
  "collectCoverageFrom": [
    "lib/**/*.js",
    "src/**/*.js"
  ],
  "globalSetup": "<rootDir>/test/setup-global.js",
  "roots": [
    "lib",
    "src",
    "test"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/test/setup-test.js",
  "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/test/integration/"]
}
